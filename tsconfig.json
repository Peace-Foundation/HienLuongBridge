{
  "exclude": ["node_modules"],
  "include": [
    "src/**/deploy",
    "src/**/test",
    "src/**/tasks",
    "hardhat.config.ts"
  ],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "mocha"]
  }
}
